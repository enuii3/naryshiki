<% provide(:title,'login')%>
<div class="center jumbotron">
  <div class="form-template">
    <h1 class="center">ログイン</h1>

    <div class= "form-group">
      <%= form_for(:session, url: login_path) do |f| %>

        <%= f.label :email, "メールアドレス" %>
        <%= f.text_field :email, class:'form-control' %>

        <%= f.label :password, "パスワード" %>
        <%= link_to "(パスワードを忘れた場合)", new_password_reset_path %>
        <%= f.password_field :password, class:'form-control' %>

        <%= f.label :remember_me, class: 'check inline' do %>
          <%= f.check_box :remember_me %>
          <span>一定期間ログインを自動化したい場合はチェック</span>
        <% end %>

        <%= f.submit "ログイン", class: "btn btn-primary mb-2" %>
      <% end %>
    </div>
  </div>
  <div class="form-group form-check">
    <p>新規登録は<%= link_to 'こちら', signup_path, class:'signup' %></p>
  </div>
</div>
